<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	xmlns="sap.m" 
	xmlns:f="sap.f"
	xmlns:l="sap.ui.layout" 
	controllerName="sap.ui.demo.todo.controller.Register" displayBlock="true"
>
		<App id="Register">
			<pages>
				<Page id="register-page">
					<content>
						<Panel headerText="{i18n>registerTitle}"
							class="sapUiResponsiveMargin"
							width="auto">
							<l:VerticalLayout class="sapUiContentPadding" width="100%">
								<Input
								id="nameInput"
								type="Text"
								placeholder="Enter name"
								width="18rem" />
								<Input
									id="surnameInput"
									type="Text"
									placeholder="Enter surname"
									width="18rem" />
								<Input
									id="emailInput"
									type="Text"
									placeholder="Enter email"
									width="18rem" />
								<Input
									id="telnumberInput"
									type="Text"
									placeholder="Enter telephone number"
									width="18rem" />
								<Input
									id="usernameInput"
									type="Text"
									placeholder="Enter username"
									width="18rem" />
								<Input
									id="passwordInput"
									type="Password"
									placeholder="Enter password"
									width="18rem" />
								<Input
									id="passwordInputCheck"
									type="Password"
									placeholder="Re-Enter password"
									width="18rem" />

								<Button text="Register" press="onPressRegister" design="Emphasized" width="18rem"></Button>
							</l:VerticalLayout>
							
						</Panel>
					</content>
				</Page>	
			</pages>
		</App>
</mvc:View>
