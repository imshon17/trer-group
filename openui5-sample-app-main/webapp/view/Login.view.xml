<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" 
	xmlns="sap.m" 
	xmlns:f="sap.f" 
	xmlns:l="sap.ui.layout" 
	controllerName="sap.ui.demo.todo.controller.Login" displayBlock="true"
>
		<App id="app">
			<pages>
				<Page id="login">
					<content>
						<Panel headerText="{i18n>loginTitle}" class="sapUiResponsiveMargin" width="auto">
							<l:VerticalLayout class="sapUiContentPadding" width="100%">
								<Input
									id="usernameInput"
									type="Text"
									placeholder="Enter username"
									width="18rem" />
								<Input
									id="passwordInput"
									type="Password"
									placeholder="Enter password"
									width="18rem" />
								<Button text="Login" press="onPressLogin" design="Emphasized" class="sapUiSmallMarginEnd" width="18rem"></Button>
								<Button text="Register" press="onPressRegister" design="Emphasized" class="sapUiSmallMarginEnd" width="18rem"></Button>
							</l:VerticalLayout>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
</mvc:View>
